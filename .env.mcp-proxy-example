# Example configuration for MCP Bridge Proxy
# Save this as .env or add to your existing .env file

# Standard settings for MCP Bridge
MCP_BRIDGE_ENABLED=true
MCP_BRIDGE_INTERNAL_BASE=https://lark-mcp-telegram-server.onrender.com

# Optional: Enable proxying to a native Lark-tenant MCP server
MCP_PROXY_ENABLED=false
MCP_PROXY_URL=https://your-lark-tenant-mcp-server.example.com/mcp/invoke

# To enable the proxy, set MCP_PROXY_ENABLED to true and set a valid MCP_PROXY_URL
