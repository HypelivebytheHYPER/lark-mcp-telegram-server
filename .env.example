# Required API Credentials
LARK_APP_ID=your_lark_app_id
LARK_APP_SECRET=your_lark_app_secret
TELEGRAM_TOKEN=your_telegram_bot_token

# Supabase Database (for session management)
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Server Configuration
PORT=8000

# Optional Security Configuration
# Leave empty to maintain backward compatibility
# Set values to enable enhanced security features

# API Keys for Authentication (optional)
# Generate secure random keys if you want to enable authentication
API_KEY_ADMIN=
API_KEY_USER=

# CORS Origins (optional)  
# Comma-separated list of allowed origins
# Leave empty to allow all origins (backward compatible)
ALLOWED_ORIGINS=

# Production/Development Environment
RENDER=production